    <div class="container ">
        <div class="row mt-3">
            <div class="col-md-8 offset-md-2">
                <%- include("./partials/message") %>
            </div>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg  fixed-top" style="background-color:#440a67;">
        <div class="container">
